<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="PercentProgressBar">
        
        <attr name="outer_width" format="dimension"/>
        <attr name="outer_color" format="color|reference"/>
        <attr name="outer_alpha" format="integer"/>
        <attr name="progress_bar_width" format="dimension"/>
        <attr name="progress_bar_color" format="color|reference"/>
        <attr name="progress_bar_alpha" format="integer"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color|reference"/>
        <attr name="text_alpha" format="integer"/>
        <attr name="little_circle_color" format="color|reference"/>
        <attr name="little_circle_alpha" format="dimension"/>
        <attr name="max_progress" format="integer"/>
        <attr name="current_progress" format="integer"/>
        <attr name="progress_bar_style" format="enum">
            <enum name="circular" value="10"/>
            <enum name="horizontal" value="11"/>
        </attr>

    </declare-styleable>
    
</resources>